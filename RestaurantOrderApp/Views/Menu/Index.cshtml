@model RestaurantOrderApp.ViewModel.MenuViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Menu</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr><th>Meal</th><th>Price</th></tr>
        </thead>
        @for (int i = 0; i < Model.Meals.Count(); ++i)
        {
            <tr class="active"><td>@Model.Meals[i].Name</td><td>$@Model.Meals[i].Price</td></tr>
        }
        <thead>
            <tr><th>Drink</th><th>Price</th></tr>
        </thead>
        @for (int i = 0; i < Model.Drinks.Count(); ++i)
        {
            <tr class="active"><td>@Model.Drinks[i].Name</td><td>$@Model.Drinks[i].Price</td></tr>
        }
    </table>
 </div>